{
  "expo": {
    "name": "comments-app",
    "slug": "comments-app",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.orders.commentsapp",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-sqlite",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Разрешить приложению Comments-App использовать местоположение"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Приложение получает доступ к вашим фото, чтобы вы могли делиться ими с другими."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "94d88f7d-42f1-4696-a879-dcdd8ab86d11"
      }
    },
    "owner": "ant_volkov"
  }
}
